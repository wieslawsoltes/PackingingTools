{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://packagingtools.dev/schema/project.json",
  "title": "PackagingTools Project",
  "type": "object",
  "required": ["id", "name", "version", "metadata", "platforms"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "version": { "type": "string" },
    "metadata": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "platforms": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["formats"],
        "properties": {
          "formats": {
            "type": "array",
            "items": { "type": "string" }
          },
          "properties": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
